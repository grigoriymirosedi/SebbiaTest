<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.NewsDetailsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/newsDetailsTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Самое дорогое в мире платье Мэрилин Монро продадут на аукционе"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newsDetailsShortDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Платье Мэрилин Монро, в котором она выступила на 45-м дне рождения американского президента Джона Кеннеди, продадут с аукциона."
                android:textSize="24sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#808080 " />

            <TextView
                android:id="@+id/newsDetailsFullDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:linksClickable="true"
                android:textSize="24sp"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/newsDetailsPB"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/newsDetailsDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:text="TextView"
                android:textSize="20sp"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>